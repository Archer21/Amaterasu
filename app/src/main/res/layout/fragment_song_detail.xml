<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.archer.amaterasu.ui.fragment.SongDetailFragment">

    <ImageView
        android:id="@+id/song_background"
        android:src="@drawable/placeholder_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        />


    <TextView
        android:id="@+id/song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textIcons"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ignite"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        android:layout_gravity="center"
        android:layout_below="@+id/song_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eair Aoi"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:textColor="@color/textIcons"
        android:layout_below="@+id/song_image"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/artist_name"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_like"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_favorite_border_white_24dp"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen" />

        <ImageButton
            android:id="@+id/button_favorite"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_star_border_white_24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen" />


        <ImageButton
            android:id="@+id/button_download"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_get_app_white_24dp"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen" />
    </LinearLayout>

</RelativeLayout>





















