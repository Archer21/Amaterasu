<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="172dp"
    android:layout_height="192dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_hot_song_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="@dimen/title_hot_song_item"
            android:textColor="@color/colorAccent"
            android:text="@string/title_hot_song_item" />

        <TextView
            android:id="@+id/artist_hot_song_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="@dimen/artist_hot_song_item"
            android:textColor="@color/textIconsColors"
            android:text="@string/artist_hot_song_item"
            android:layout_below="@+id/title_hot_song_item"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_hot_song_item"
            android:layout_width="86dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:src="@drawable/eair_aoi"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <TextView
                android:id="@+id/time_hot_song_item"
                android:layout_width="0dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/textIconsColors"
                android:textSize="@dimen/time_hot_song_item"
                android:text="@string/time_hot_song_item"
                android:layout_weight="0.5"
                android:gravity="end"
                android:drawableLeft="@mipmap/ic_menu"
                android:drawableStart="@mipmap/ic_home"/>

            <TextView
                android:id="@+id/likes_hot_song_item"
                android:layout_width="0dp"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/textIconsColors"
                android:textSize="@dimen/time_hot_song_item"
                android:text="@string/likes_hot_song_item"
                android:layout_weight="0.5"
                android:gravity="right"
                android:drawableLeft="@mipmap/ic_home"
                android:drawableStart="@mipmap/ic_home" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>


































